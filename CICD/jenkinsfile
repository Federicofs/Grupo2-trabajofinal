pipeline {
    agent any
    tools {
        nodejs "node"
    }
    stages {
        
       stage('Get repo'){
            steps {
                sh 'git clone https://github.com/Federicofs/app-devops-bootcamp.git'
            }
        }
 
        stage('Install') {
            steps {
                dir('app-devops-bootcamp/api-store') {
                    sh 'npm install'
                }  
            }
        }
        
        stage('Build') {
            steps {
                dir('app-devops-bootcamp/api-store') {
                    sh 'npm run build'
                }
            }
        }
        stage('Test') {
            steps {
                dir('app-devops-bootcamp/api-store'){
                    sh 'npm run test'
                }
            }
        }
    
        stage('Deploy') {
            steps {
                dir('app-devops-bootcamp/api-store'){
                    withCredentials([usernamePassword(credentialsId: '392166e3-4fca-4aac-b763-f779c311ddc0', passwordVariable: 'PASSWORD', usernameVariable: 'USERNAME')]) {
                        sh 'docker build -t ${USERNAME}/api-store:lts .'
                        sh 'docker login -u ${USERNAME} -p ${PASSWORD}  '
                        sh 'docker push ${USERNAME}/api-store:lts'
                    }
                }
            }
        }
    }
}
