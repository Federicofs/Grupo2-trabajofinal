pipeline {
    agent any
    tools {
        nodejs "node"
    }
        stages {
        
           stage('get repo'){
            steps {
            sh 'git clone https://github.com/edgaregonzalez/app-devops-bootcamp.git'
                }
            }
 
        stage('install') {
            steps {
              dir('app-devops-bootcamp/api-store') {
                sh 'npm install'
                }
            }
        }
        
          stage('Build') {
            steps {
              dir('app-devops-bootcamp/api-store') {
                sh 'npm run build'
                }
            }
        }
    
        stage('Deploy') {
            steps {
                sh 'docker build -t api-store:lts'
            }
        }
    }
}
